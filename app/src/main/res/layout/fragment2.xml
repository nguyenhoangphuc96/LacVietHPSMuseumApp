<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:orientation="horizontal"
        android:weightSum="100"
        android:background="@color/colorBackgroundToolbarGray">


        <LinearLayout
            android:layout_weight="33.5"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tvTitleCollection1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="1954-1975"
                android:textAppearance="@style/TextTitleFragment2"
                android:gravity="center"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="33.5"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tvTitleCollection2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Tiền Việt Nam"
                android:textAppearance="@style/TextTitleFragment2"
                android:gravity="center"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_weight="33"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tvTitleCollection3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Văn Hoá Dân Tộc"
                android:textAppearance="@style/TextTitleFragment2"
                android:gravity="center"
                />

        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="8"
        android:orientation="vertical"
        android:background="@color/colorWhite">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rcvShowCollectionExhibit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp">

        </android.support.v7.widget.RecyclerView>


    </LinearLayout>

</LinearLayout>