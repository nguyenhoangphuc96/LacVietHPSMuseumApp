<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextTitleCategory" parent="@style/TextAppearance.Design.Counter">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#FFFFFF</item>

    </style>

    <style name="TextTitleCollection" parent="@style/TextAppearance.Design.Counter">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="TextSearchBox" parent="@style/TextAppearance.Design.Counter">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/colorTextSearchBox</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="TextTitleGlobalWhite" parent="@style/TextAppearance.Design.Counter">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#FFFFFF</item>

    </style>
    <style name="TextTitleDetailBlue" parent="@style/TextAppearance.Design.Counter">
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">#1777AA</item>

    </style>
    <style name="TextListInfoDetailGray" parent="@style/TextAppearance.Design.Counter">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/colorGrayforText</item>

    </style>
    <style name="TextListInfoDetailBlack" parent="@style/TextAppearance.Design.Counter">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/colorBlack</item>

    </style>
    <style name="TextTabName" parent="@style/TextAppearance.Design.Counter">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/colorGrayforText</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>

    </style>
    <style name="TextTitleButtonBlue" parent="@style/TextAppearance.Design.Counter">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
    <style name="TextLabelMenu">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>
    <style name="TextListCategogySpinner" parent="@style/TextAppearance.Design.Counter">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#000000</item>

    </style>
    <style name="TextTitleMenu" parent="@style/TextAppearance.Design.Counter">
    <item name="android:textSize">17sp</item>
    <item name="android:textColor">@color/colorWhite</item>
    <item name="android:textAllCaps">true</item>
    <item name="android:textStyle">bold</item>
    </style>
    <style name="TextTitleMenuChil" parent="@style/TextAppearance.Design.Counter">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>
    <style name="TextTitleCategogyDialog" parent="@style/TextAppearance.Design.Counter">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>
    <style name="CustomDialog" parent="android:Theme.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
