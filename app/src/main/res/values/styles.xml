<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="TextTitleCategory" parent="@style/TextAppearance.Design.Counter">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#FFFFFF</item>

    </style>
    <style name="TextTitleCollection" parent="@style/TextAppearance.Design.Counter">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#000000</item>
    </style>
    <style name="TextSearchBox" parent="@style/TextAppearance.Design.Counter">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/colorTextSearchBox</item>
        <item name="android:textStyle">italic</item>
    </style>
    <style name="TextTitleGlobalWhite" parent="@style/TextAppearance.Design.Counter">
        <item name="android:textSize">17dp</item>
        <item name="android:textColor">#FFFFFF</item>

    </style>

</resources>
